{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src/**/*", "scripts/**/*"],
		"ignore": [
			".config",
			"dist",
			"playwright",
			"playwright-report",
			"src/codegen"
		]
	}
}
